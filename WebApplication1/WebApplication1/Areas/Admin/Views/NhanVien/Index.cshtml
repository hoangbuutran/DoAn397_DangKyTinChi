@model IEnumerable<Model.EF.NHAN_VIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
<div class="cardTuLamIndex">

    <h2>Quản lý Giáo vụ</h2>

    <p class="btn">
        @Html.ActionLink("Tạo mới giáo vụ", "Create")
    </p>
    <hr />
    <table class="table table-bordered">
        <tr class="panel-heading">
            <th>
                @Html.DisplayNameFor(model => model.TAIKHOAN.USERNAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TEN_NHANVIEN)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRANG_THAI)
            </th>
            <th>Tùy Chọn</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TAIKHOAN.USERNAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_NHANVIEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @if ((bool)item.TRANG_THAI)
                    {
                        <span class="label label-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="label label-danger">Tạm khóa</span>
                    }
                </td>
                <td>
                    <p class="btn">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID_NHANVIEN })
                    </p>
                    <p class="btn">
                        @Html.ActionLink("Xem", "Details", new { id = item.ID_NHANVIEN })
                    </p>
                    <p class="btn">
                        @Html.ActionLink("Khóa/Mở", "KhoaMo", new { id = item.ID_NHANVIEN })
                    </p>
                </td>
            </tr>
        }

    </table>

</div>