@model WebApplication1.Areas.GiaoVu.Models.ThongKeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<h2 id="labelthongke">Thống kê</h2>

@using (Html.BeginForm("ThongKe","ThongKe", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.Label("Chọn Năm Học:")
                @Html.DropDownList("NamHoc", ViewBag.DSNamHoc as SelectList, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.NamHoc, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Chọn Học Kỳ:")
                @Html.DropDownList("HocKy", ViewBag.DSHocKy as SelectList, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.HocKy, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <input type="submit" value="Thống Kê" class="btn btn-default" />
            </div>
        </div>
    </div>
}
