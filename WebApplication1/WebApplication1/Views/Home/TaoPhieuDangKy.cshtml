@model Model.EF.PHIEU_DANG_KY

@{
    ViewBag.Title = "TaoPhieuDangKy";
    Layout = "~/Views/Shared/_LayoutSinhVien.cshtml";
    var sinhvien = (WebApplication1.Common.SinhVienModel)Session["USER_SESSION"];
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal text-center">
        <h4>Tạo Phiếu Đăng Ký Tín Chỉ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_SINHVIEN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_SINHVIEN", new List<SelectListItem> { new SelectListItem { Text = @sinhvien.MaSinhVien, Value = @sinhvien.IdSinhVien.ToString() } }, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.ID_SINHVIEN, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ID_NAM_HOC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_NAM_HOC", ViewBag.DSNamHoc as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_NAM_HOC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HOC_KY, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_HOC_KY", ViewBag.DSHocKy as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_HOC_KY, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo Phiếu Đăng Ký" class="btn btn-default" />
            </div>
        </div>
    </div>
}
